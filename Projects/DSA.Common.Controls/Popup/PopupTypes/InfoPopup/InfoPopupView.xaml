<base:PopupWindow x:Class="ConnectSuiteInstaller.Common.Controls.Popup.PopupTypes.InfoPopup.InfoPopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:base="clr-namespace:ConnectSuiteInstaller.Common.Controls.Popup.Contracts"
        mc:Ignorable="d"        
        Title="{Binding PopupTitle}"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        MaxWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Grid.Row="0" Grid.RowSpan="2" Text="{Binding Text}" HorizontalAlignment="Center"/>
        <Button Grid.Row="2" Style="{StaticResource DefaultButtonStyle}" Width="100"  Height="30" Margin="10 15 10 0"
                    BorderBrush="#0061aa" FontWeight="SemiBold" Foreground="White" Background="{StaticResource customGreen}" Content="{Binding ActionName}"
                    Command="{Binding ClosePopupCommand}"/>
    </Grid>
</base:PopupWindow>
